<%= render 'newsletter_side' %>
<div id="new_newsletter">
	<% flash.each do |key, value| %>
		<div class="flash <%= key %>">
			<%= link_to image_tag("/assets/close.png"), "javascript: void(0);", :onclick => "closeFlashUp()", :class => "flash_close" %><%= value %>
		</div>
	<% end %>
	<%= form_for @newsletter do |f| %>
		<%= render 'users/error_messages', :object => f.object %>
		<div class="field">
			<p>Name: <%= f.text_field :name, :autocomplete => "off", :placeholder => "Required" %></p>
		</div>
		<div class="field">
			<p>Info 1: <%= f.text_area :info1, :autocomplete => "off" %></p>
		</div>
		<div class="field">
			<p>Info 2: <%= f.text_area :info2, :autocomplete => "off" %></p>
		</div>
		<div class="field">
			<p>Info 3: <%= f.text_area :info3, :autocomplete => "off" %></p>
		</div>
		<div class="field">
			<p>Info 5: <%= f.text_area :info5, :autocomplete => "off" %></p>
		</div>
		<div class="field">
			<p>Info 6: <%= f.text_area :info6, :autocomplete => "off" %></p>
		</div>
		<div class="field">
			<p>Deal 1: <%= f.text_field :deal1, :autocomplete => "off", :placeholder => "2305 (The Deal's ID)" %></p>
		</div>
		<div class="field">
			<p>Deal 2: <%= f.text_field :deal2, :autocomplete => "off", :placeholder => "Fill in the above deal before filling in this." %></p>
		</div>
		<div class="field">
			<p>Deal 3: <%= f.text_field :deal3, :autocomplete => "off", :placeholder => "Fill in the above deal before filling in this." %></p>
		</div>
