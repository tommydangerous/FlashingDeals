<div id="side_deal">
	<div id="side_deal_title">
		<h1><strong><span class="green">+</span></strong> Deals</h1>
	</div>
	<div id="side_deal_content">
		<h1>Categories</h1>
		<div class="side_deals">
			<ul>
				<% Category.all.each do |c| %>
					<% if signed_in? %>
						<li><%= link_to c.name, c %></li>
					<% else %>
						<li><%= link_to c.name, "javascript:void(0);", :class => "alertdim" %></li>
					<% end %>
				<% end %>
			</ul>
		</div>
	</div>
</div>