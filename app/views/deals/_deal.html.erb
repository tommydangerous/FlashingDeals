<% if deal.metric >= 2 && deal.metric < 4 %>
<div id="deal_single_<%= deal.id %>" class="deal_single deal_electric">
<% elsif deal.metric >= 4 %>
<div id="deal_single_<%= deal.id %>" class="deal_single deal_flashing">
<% else %>
<div id="deal_single_<%= deal.id %>" class="deal_single deal_nothing">
<% end %>
	<div class="col1">
		<% if deal.image.nil? %>
			<a href="<%= deal_path(deal) %>">
				<%= div_for(deal, :class => "deal_image_container") do %>
					<% if deal.metric >= 2 && deal.metric < 4 %>
						<%= lightning_deal_1 %>
					<% elsif deal.metric >= 4 %>
						<%= lightning_deal_2 %>
					<% end %>
					<div class="deal_image" style="background-image:url(<%= deal.image %>)"></div>
					<%= image_tag("#{deal.image}", :id => "deal_partial_image") %>
				<% end %>
			</a>
		<% else %>
			<a href="<%= deal_path(deal) %>">
			<%= div_for(deal, :class => "deal_image_container") do %>
				<% if deal.metric >= 2 && deal.metric < 4 %>
					<%= lightning_deal_1 %>
				<% elsif deal.metric >= 4 %>
					<%= lightning_deal_2 %>
				<% end %>
				<div class="deal_image" style="background-image:url(<%= deal.image.split(' ').join("%20") %>)"></div>
				<%= image_tag("#{deal.image}", :id => "deal_partial_image") %>
			<% end %>
			</a>
		<% end %>
		<div class="watch_status">
			<% if signed_in? %>
				<% if current_user.watching?(deal) %>
					<div id="watching_status">
						<p>Watching!</p>
					</div>
				<% end %>			
			<% end %>
		</div>
		<% if signed_in? %>
			<% if current_user.admin? %>
				<div id="deal_editmarks_<%= deal.id %>" class="deal_editmarks">
					<%= render :partial => "editmarks/deal_editmarks", :locals => { :deal => deal } %>
				</div>
			<% end %>
		<% end %>
	</div>
	<div class="col2">
		<h1><%= link_to deal.name, deal %></h1>
		<% unless deal.coupon.nil? || deal.coupon.empty? %>
			<p><span class="grey_150">Coupon Code:</span> <%= deal.coupon %></p>
		<% end %>
		<% unless deal.rebate.nil? || deal.rebate.empty? %>
			<p class="rebate"><span class="grey_150">Rebate Link:</span> <%= link_to "Click Here", deal.rebate, :class => "rebate_link", :target => "_blank" %></p>
		<% end %>
		<% if signed_in? %>
			<% if current_user.admin? %>
				<div id="location">
					<% unless deal.location == nil %>
						<p><%= link_to deal.location.name, "/#{deal.location.permalink}" %></p>
					<% end %>
				</div>
				<div id="categories">
					<ul>
					<% deal.categories.each do |c| %>
						<li><%= link_to c.name, c %></li>
					<% end %>
					</ul>
				</div>
				<ul>
					<% unless deal.posted.nil? %>
						<li>
							<p>
								<span class="light_grey">Posted:</span> <%= deal.posted.strftime("%A, %b %d") %> <span class="grey_150">at</span> <%= deal.posted.strftime("%I:%M %p") %>
							</p>
						</li>
					<% end %>
					<p><span class="light_grey">Created:</span> <%= deal.created_at.strftime("%A, %b %d") %> <span class="light_grey">at</span> <span class="grey_75"><%= deal.created_at.strftime("%I:%M %p") %></span></p>
					<% unless deal.time_in.nil? %>
						<li><p><span class="light_grey">Time In:</span> <%= deal.time_in.strftime("%A, %b %d") %> <span class="grey_150">at</span> <%= deal.time_in.strftime("%I:%M %p") %></p></li>
					<% end %>
					<% unless deal.site.nil? || deal.site.empty? %>
						<li><p><span class="light_grey">From:</span> <%= deal.site %></p></li>
					<% end %>
				</ul>
				<% if signed_in? %>
					<% if current_user.admin? %>
						<p><span class="light_grey">Click Count:</span> <%= deal.click_count %></p>
					<% end %>
				<% end %>
				<div id="reviewed_<%= deal.id %>" class="deal_editmarks">
					<%= render :partial => "editmarks/reviewed", :locals => { :deal => deal } %>
				</div>
			<% end %>
		<% end %>
	</div>
	<div class="col3">
		<div class="price">
			<h2>
				<% if deal.coupon.nil? || deal.coupon.empty? %>
					<%= link_to "DEAL!", frame_deal_path(deal, :coupon => "no"), :target => "_blank" %>
				<% else %>
					<%= link_to "DEAL!", frame_deal_path(deal, :coupon => "yes"), :target => "_blank" %>
				<% end %>
			</h2>
			<% if deal.price.blank? && deal.discount != nil %>
				<h1><%= deal.discount.round %>% Off</h1>
			<% elsif deal.price.blank? %>
				<h1>$</h1>
			<% elsif deal.price == 0 %>
				<h1>Free</h1>
			<% else %>
				<h1>$<%= (deal.price * 1.0).round %></h1>
			<% end %>
		</div>
	<% if signed_in? %>
		<% if current_user.admin? %>
		<div id="deal_data">
		<table>
			<tr>
				<td class="deal_data_numbers">
					<p>
					<% if deal.plusminus > 0 %>
						<span class="dark"><%= deal.plusminus %></span>
					<% elsif deal.plusminus < 0 %>
						<span class="dark"><%= deal.plusminus %></span>
					<% else %>
						<span class="dark"><%= deal.plusminus %></span>
					<% end %>
					</p>
				</td>
				<td class="deal_data_labels">
					<%= image_tag("/assets/flash_point.png", :title => "Flash Points", :class => "flash_points") %>
				</td>
			</tr>
			<tr>
				<td class="deal_data_numbers">
					<p><%= (deal.comments.size + deal.subcomments.size) %></p>
				</td>
				<td class="deal_data_labels">
					<%= image_tag("/assets/comment_bubble.png", :title => "Comments", :class => "comment_bubble") %>
				</td>
			</tr>
			<tr>
				<td class="deal_data_numbers">
					<p><%= deal.view_count %></p>
				</td>
				<td class="deal_data_labels">
					<%= image_tag("/assets/glass.png", :title => "Views", :class => "views") %>
				</td>
			</tr>
			<% if signed_in? %>
				<% if current_user.admin? %>
					<tr>
						<td class="deal_data_numbers">
							<p>
							<% if deal.metric < 1 && deal.metric >= 0 %>
								<span class="red"><%= (deal.metric * 200).round/200.0 %></span>
							<% elsif deal.metric < 2 && deal.metric >= 1 %>
								<span class="blue"><%= (deal.metric * 200).round/200.0 %></span>
							<% elsif deal.metric < 0 %>
								<span class="blue">FM</span>
							<% else %>
								<span class="green"><%= (deal.metric * 200).round/200.0 %></span>
							<% end %>
							</p>
						</td>
						<td class="deal_data_labels">
							<%= image_tag("/assets/metric.png", :title => "Metric", :class => "metric") %>
						</td>
					</tr>
				<% end %>
			<% end %>
		</table>
		</div>
		<% end %>
	<% end %>
	</div>
	<div class="clear"></div>
	<% if signed_in? %>
		<% if current_user.admin? %>
			<div class="edit_rising_deal">
				<%= link_to "Edit + Add to Queue", "javascript:void(0);", :onclick => "toggleRisingDealEdit(#{deal.id})" %>
			</div>
			<%= render :partial => "deals/add_edit_to_queue_form", :locals => { :deal => deal } %>
		<% end %>
	<% end %>
	<div class="clear"></div>
</div>