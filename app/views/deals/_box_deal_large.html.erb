<% if deal.dead? %>
<div id="box_deal_<%= deal.id %>" class="box_deal_large deal_dead" onmouseover="showBoxDealShare(<%= deal.id %>);" onmouseout="hideBoxDealShare();" title="This deal has expired">
<% else %>
<div id="box_deal_<%= deal.id %>" class="box_deal_large" onmouseover="showBoxDealShare(<%= deal.id %>);" onmouseout="hideBoxDealShare();">
<% end %>
	<% unless deal.metric.nil? %>
		<% if deal.metric >= 4 %>
			<div id="box_deal_large_lightning">
				<%= lightning_deal_2 %>
			</div>
		<% end %>
	<% end %>
	<div id="box_deal_large_price">
		<h1>
			<% if deal.price.nil? && deal.discount != nil %>
				<%= deal.discount.round %>% Off
			<% elsif deal.price.blank? && deal.discount.blank? && deal.value.blank? && deal.savings != nil %>
				$<%= deal.savings.round %> Off
			<% elsif deal.price.blank? %>
			<% elsif deal.price == 0 %>
				Free
			<% else %>
				$<%= (deal.price * 1.0).round %>
			<% end %>
		</h1>
	</div>
	<div id="box_deal_large_image_container">
		<div class="box_deal_link_overlay">
			<% if signed_in? %>
				<%= link_to("javascript:void(0)", :class => "box_deal_large_link", :onclick => "overlayPopup(#{deal.id})") do %>
					<img class="lazy lazy_load box_image overlay_image_<%= deal.id %>" src="/assets/lazy_large.png" data-original="<%= deal.image %>" id="box_deal_large_image">
				<% end %>
			<% else %>
				<% if deal.exclusive? %>
					<%= link_to("javascript:void(0)", :class => "box_deal_large_link", :onclick => "signupPopupExclusive();") do %>
						<img class="lazy lazy_load box_image overlay_image_<%= deal.id %>" src="/assets/lazy_large.png" data-original="<%= deal.image %>" id="box_deal_large_image">
					<% end %>
				<% else %>
					<%= link_to("javascript:void(0)", :class => "box_deal_large_link", :onclick => "overlayPopup(#{deal.id})") do %>
						<img class="lazy lazy_load box_image overlay_image_<%= deal.id %>" src="/assets/lazy_large.png" data-original="<%= deal.image %>" id="box_deal_large_image">
					<% end %>
				<% end %>
			<% end %>
		</div>
		<div class="box_deal_link_overlay_none">
			<% if signed_in? %>
				<%= link_to(deal, :class => "box_deal_large_link") do %>
					<img class="lazy lazy_load box_image overlay_image_<%= deal.id %>" src="/assets/lazy_large.png" data-original="<%= deal.image %>" id="box_deal_large_image">
				<% end %>
			<% else %>
				<% if deal.exclusive? %>
					<%= link_to(deal, :class => "box_deal_large_link", :onclick => "signupPopupExclusive();") do %>
						<img class="lazy lazy_load box_image overlay_image_<%= deal.id %>" src="/assets/lazy_large.png" data-original="<%= deal.image %>" id="box_deal_large_image">
					<% end %>
				<% else %>
					<%= link_to(deal, :class => "box_deal_large_link") do %>
						<img class="lazy lazy_load box_image overlay_image_<%= deal.id %>" src="/assets/lazy_large.png" data-original="<%= deal.image %>" id="box_deal_large_image">
					<% end %>
				<% end %>
			<% end %>
		</div>
	</div>
	<div id="box_deal_share_<%= deal.id %>" class="box_deal_large_share">
		<ul>
			<li>
				<a href="https://www.facebook.com/sharer/sharer.php?u=http://www.flashingdeals.com<%= deal_path(deal) %>" class="example3demo_<%= deal.id %>">
					<%= image_tag("/assets/facebook_button_grey.png") %>
				</a>
			</li>
			<li>
				<a href="https://twitter.com/intent/tweet?original_referer=&text=<%= deal.name %>%20http://www.flashingdeals.com<%= deal_path(deal) %>&via=FlashingDeals" target="_blank">
					<%= image_tag("/assets/twitter_button_grey.png") %>
				</a>
			</li>
			<li>
				<a href="http://api.addthis.com/oexchange/0.8/forward/email/offer?url=http://www.flashingdeals.com<%= deal_path(deal) %>" class="example4demo_<%= deal.id %>">
					<%= image_tag("/assets/email_button_grey.png") %>
				</a>
			</li>
		</ul>
	</div>
	<div id="box_deal_large_name">
		<h1><%= wrap_box_deal_large_name(deal.name) %></h1>
		<% unless deal.site.nil? || deal.site.empty? %>
			<p>at <%= deal.site %></p>
		<% end %>
	</div>
	<div id="box_deal_large_comments">
		<% deal.comments.each do |comment| %>
			<div class="box_deal_large_comment">
				<div id="box_deal_large_comment_user">
					<%= link_to(User.find(comment.user_id)) do %>
						<img class="lazy lazy_load" src="/assets/lazy.png" data-original="<%= User.find(comment.user_id).photo.url %>" id="user_photo_subcomment">
					<% end %>
				</div>
				<div id="box_deal_large_comment_content">
					<p><%= auto_link(to_html(strip_tags(comment.content)), :all, :target => "_blank") %></p>
				</div>
				<div class="clear"></div>
			</div>
		<% end %>
	</div>
</div>
<% if Rails.env.development? %>
	<script>
	$('.example3demo_<%= deal.id %>').popupWindow({ 
		centerScreen:1,
		resizable: 1,
		height: 375,
		width: 675
	}); 
	$('.example4demo_<%= deal.id %>').popupWindow({ 
		centerScreen:1,
		resizable: 1,
		height: 500,
		width: 675
	});
	
	function overlayPopup(id) {
		var i = id
		var url = "http://localhost:3000/deals/"+i+"/show_overlay"
		$("body").addClass("stationary");
		$(".overlay_image_"+i).hide();
		$(".overlayInner").load(url, function() {
			$(".overlayOuter").fadeIn(200);
		})
	};
	
	function adjustHeight() {
		var h = $(".overlay_image_<%= deal.id %>").height();
		var x = (200 - h)/2
		$(".overlay_image_<%= deal.id %>").css("top", x);
	}
	setInterval(adjustHeight, 0);
	</script>
