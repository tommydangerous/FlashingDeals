<% if cookies[:my_account] == "yes" && @watching_deals.include?(@deal) %>
	<% if @watching_deals.size == @watching_deals.index(@deal) + 1 %>
		<%= link_to(@watching_deals[0], :id => "previous_deal", :class => "prev_next_no_overlay", :title => "More deals") do %>
			<%= image_tag @watching_deals[0].image, :class => "previous_deal_image" %>
		<% end %>
	<% else %>
		<%= link_to(@watching_deals[@watching_deals.index(@deal) + 1], :id => "previous_deal", :class => "prev_next_no_overlay", :title => "More deals") do %>
			<%= image_tag @watching_deals[@watching_deals.index(@deal) + 1].image, :class => "previous_deal_image" %>
		<% end %>
	<% end %>
	<%= link_to(@watching_deals[@watching_deals.index(@deal) - 1], :id => "next_deal", :class => "prev_next_no_overlay", :title => "More deals") do %>
		<%= image_tag @watching_deals[@watching_deals.index(@deal) - 1].image, :class => "next_deal_image" %>
	<% end %>
	
