<div id="prevNextDeals">
	<% if cookies[:category] && cookies[:category] != "" && @category_deals.include?(@deal) %>
		<% if @category_deals.size == @category_deals.index(@deal) + 1 %>
			<%= link_to '', @category_deals[0], :class => "prevDeal" %>
		<% else %>
			<%= link_to '', @category_deals[@category_deals.index(@deal) + 1], :class => "prevDeal" %>
		<% end %>
		<%= link_to '', @category_deals[@category_deals.index(@deal) - 1], :class => "nextDeal" %>
	<% elsif cookies[:my_account] == "yes" && @watching_deals.include?(@deal) %>
		<% if @watching_deals.size == @watching_deals.index(@deal) + 1 %>
			<%= link_to '', @watching_deals[0], :class => "prevDeal" %>
		<% else %>
			<%= link_to '', @watching_deals[@watching_deals.index(@deal) + 1], :class => "prevDeal" %>
		<% end %>
		<%= link_to '', @watching_deals[@watching_deals.index(@deal) - 1], :class => "nextDeal" %>
	<% elsif cookies[:category] == "" && cookies[:my_account] == "" && @featured_deals.include?(@deal) %>
		<% if @featured_deals.size == @featured_deals.index(@deal) + 1 %>
			<%= link_to '', @featured_deals[0], :class => "prevDeal" %>
		<% else %>
			<%= link_to '', @featured_deals[@featured_deals.index(@deal) + 1], :class => "prevDeal" %>
		<% end %>
		<%= link_to '', @featured_deals[@featured_deals.index(@deal) - 1], :class => "nextDeal" %>
	<% end %>
</div>