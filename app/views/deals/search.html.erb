<div id="side_panel">
	<%= render 'shared/control_panel' %>
</div>
<div id="deals_list">
	<div id="search">
		<%= form_tag search_path, :method => :get do %>
			<p>
				<%= text_field_tag :search, params[:search], :autocomplete => "off" %>
				<%= submit_tag "Search", :name => nil, :id => "search_button" %>
			</p>
		<% end %>
	</div>
	<div id="deals">
		<div id="deal_nav">
			<div id="paginate_range">
				<h1>Total Deals: <%= @deals_total_count %> |
				Number of Results: <%= @deals_found.count %></h1>
			</div>
		</div>			
		<%= render @deals %>
	</div>
	<%= will_paginate @deals, :separator => "" %>
</div>