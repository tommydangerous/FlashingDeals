<%= render 'shared/side_panel' %>
<div id="deals_list">
	<div id="search">
		<% unless @deals.empty? %>
		<div class="paginate_range">
			<%= render "paginate_range" %>
		</div>
		<% end %>
		<div id="search_form">
		<%= form_tag deals_path, :method => :get, :id => "deals_search" do %>
			<%= text_field_tag :search, params[:search] %>
			<%= submit_tag "Search", :name => nil, :id => "search_button" %>
			<div id="sort_direction"><%= render 'sort_direction' %></div>
		<% end %>
		</div>
	</div>
	<div id="deals">
		<%= render 'all_deals' %>
	</div>
</div>