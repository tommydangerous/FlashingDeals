setInterval(adjustImage);
$('.example3demo').popupWindow({ 
	centerScreen:1,
	resizable: 1,
	height: 375,
	width: 675
}); 
$('.example4demo').popupWindow({ 
	centerScreen:1,
	resizable: 1,
	height: 500,
	width: 675
}); 
</script>