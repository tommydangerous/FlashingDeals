<%= render 'shared/side_panel' %>
<div id="deals_list">
	<% unless cookies[:hide_categories_info] == "yes" %>
		<div id="page_deal_info">
			<div id="page_deal_info_close">
				<%= link_to image_tag("/assets/close.png"), hide_categories_info_path, :onclick => "hidePageDealInfo();", :remote => true, :title => "Hide this message" %>
			</div>
			<p>This page breaks down the Community Deals into categories, making your life easier and everyone happier. Don't forget to check out the home page for new deals every 15 minutes, and in case you missed it, check out the Featured Deals for all the excitement.</p>
		</div>
	<% end %>
	<div id="deal_page_info">
		<div id="show_electric_flashing">
			<ul>
				<%= render "deals/deals_per_page" %>
			</ul>
		</div>
	</div>
	<div id="search">
		<% unless @deals.empty? %>
		<div class="paginate_range">
			<%= paginate_range(@deals, @deals_total_count) %>
		</div>
		<% end %>
		<div id="search_form">
		<%= form_tag @category, :method => :get do %>
			<%= hidden_field_tag :sort, params[:sort] %>
			<%= hidden_field_tag :direction, params[:direction] %>
			<%= hidden_field_tag :deals_per_page, params[:deals_per_page] %>
			<%= text_field_tag :search, params[:search], :autocomplete => "off" %>
			<%= submit_tag "Search", :name => nil, :id => "search_button" %>
		<% end %>
		</div>
	</div>
	<%= render "deals/deal_nav" %>
	<a name="top"></a>
		<%= render @deals %>
	<%= will_paginate @deals, :separator => "" %>
	<% unless @deals.count < 3 %>
		<div id="back_to_top">
			<strong>^</strong><%= link_to "Back to the Top", "javascript:void(0);", :class => "scroll_top" %>
		</div>
	<% end %>
</div>