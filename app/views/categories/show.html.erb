<% content_for :head do %>
	<meta property="og:title" content="FlashingDeals" />
	<meta property="og:description" content="FlashingDeals is dedicated to delivering you the best deals. We do all the homework for you, researching and comparing every deal so that you don't have to." />
	<meta property="og:image" content="https://s3.amazonaws.com/flashingdeals_admin/fd_logo.png" />
	<%= auto_discovery_link_tag(:atom, featured_deals_path(:format => "atom")) %>
	<% if signed_in? %>
		<script>
		$(document).ready(function() {
			$("#<%= @category.name.downcase %>").addClass("catSelected");
			$('#grid_search_form form').attr('action', "/categories/<%= @category.name.downcase %>");
		})
		</script>
	<% else %>
		<script>
		$(document).ready(function() {
			$("#<%= @category.name.downcase %>").addClass("catSelected");
			$('#grid_search_form form').attr('action', "/categories/<%= @category.name.downcase %>");
			$("#dim_signup").show();
		})
		</script>
	<% end %>
<% end %>
<%= render 'shared/pageInfo' %>
<div id="grid_container_large">
	<%= render :partial => "deals/box_deal_large", :collection => @deals, :as => :deal %>
</div>
<div class="clear"></div>
<%= render "deals/endless_pagination" %>