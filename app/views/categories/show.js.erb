var $boxes = $('<%= j render :partial => "deals/box_deal", :collection => @deals, :as => :deal %>');
$("#grid_container").append( $boxes ).masonry( 'appended', $boxes, true);
$("img.lazy").lazyload({
	effect: "fadeIn"
});

<% if @deals.total_pages == @deals.current_page %>
	$("#endless_pagination").remove();
	$("#loading_deals").remove();
<% else %>
	$("#loading_deals").replaceWith("<%= j render("deals/endless_pagination") %>");
<% end %>