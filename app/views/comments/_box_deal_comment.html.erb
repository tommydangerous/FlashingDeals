<div class="box_deal_comment">
	<div id="box_deal_comment_user">
		<%= link_to(User.find(comment.user_id)) do %>
			<%= image_tag "/assets/lazy.png", "data-original" => User.find(comment.user_id).photo.url, :id => "user_photo_tiny", :class => "lazy lazy_#{deal.id}", :title => User.find(comment.user_id).name %>
		<% end %>
	</div>
	<div id="box_deal_comment_content">
		<p><%= strip_tags(comment.content) %></p>
	</div>
	<div class="clear"></div>
</div>