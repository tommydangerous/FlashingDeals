$("#friend_request_"+<%= @friend.id %>).remove();
$("span.friend_request_count").html('(<%= current_user.request_friends.count %>)')
$("span.friends_count").html('(<%= @user.friends.count + @user.inverse_friends.count %>)')
<% if current_user.request_friends.count == 0 %>
	$("li#my_account_drop_down_friend_requests").remove();
<% end %>
$(".box_friend_add_"+<%= @friend.id %>).html("<%= escape_javascript(render(:partial => "users/defriend", :locals => { :friend => @friend })) %>")

<% if @friend == @user_show %>
	$("div#add_friend_partial").html("<%= escape_javascript(render(:partial => "users/add_friend", :object => @user)) %>")
<% end %>
$("div#account_notice").html("<%= escape_javascript(render("users/account_notice")) %>")