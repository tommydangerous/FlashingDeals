<div id="login_notice">
	<% flash.each do |key, value| %>
		<div class="flash <%= key %>"><%= value %></div>
	<% end %>
</div>
<div id="signup_message">
	<div id="close_signup_message">
		<%= link_to("javascript:void(0);", :title => "Close", :onclick => "closeSignupButton();") do %>
			<%= image_tag("/assets/close.png") %>
		<% end %>
	</div>
	<div id="signup_message_header">
		<h1>Join the Community</h1>
	</div>
	<div id="signup_message_body">
		<div id="signup_message_info">
			<%= render "users/signup_info" %>
			<div id="signup_facebook">
				<%= link_to("/auth/facebook", :id => "facebook_signup") do %>
					<%= image_tag "/assets/facebook_auth.png" %> <h3>Signup using <b>Facebook</b></h3>
				<% end %>
				<p>(We will not post on your behalf or spam your friends)</p>
			</div>
			<h2 id="signup_here">...or <%= link_to "Signup Here", "javascript:void(0);", :onclick => "showSignupForm();" %></h2>
		</div>
		<div id="signup_message_form">
			<%= form_for(User.new) do |f| %>
				<div class="field">
					<%= f.text_field :name, :autocomplete => "off", :tabindex => 1, :placeholder => "Full name" %>
					<div class="user_signup_messages">
						<div id="user_name_example" class="user_signup_example">
							<p>Your full name (e.g. Jane Doe)</p>
						</div>
						<div id="user_name_blank" class="user_signup_error">
							Please enter your name
						</div>
						<div id="user_name_invalid" class="user_signup_error">
							Name is invalid (can contain A-Z, 0-9, -, _, or 1 space)
						</div>
						<div id="user_name_good" class="user_signup_good">
							Name looks good
						</div>
					</div>
				</div>
				<div class="field">
					<%= f.text_field :email, :autocomplete => "off", :tabindex => 2, :placeholder => "Email address" %>
					<div class="user_signup_messages">
						<div id="user_email_example" class="user_signup_example">
							<p>Your email address (e.g. janedoe@gmail.com)</p>
						</div>
						<div id="user_email_blank" class="user_signup_error">
							Please enter your email address
						</div>
						<div id="user_email_invalid" class="user_signup_error">
							Please enter a valid email address
						</div>
						<div id="user_email_good" class="user_signup_good">
							Email looks correct
						</div>
					</div>
				</div>
				<div class="field">
					<%= f.password_field :password, :tabindex => 3, :placeholder => "Password" %>
					<div class="user_signup_messages">
						<div id="user_pw_example" class="user_signup_example">
							<p>Password must be at least two characters long</p>
						</div>
						<div id="user_pw_short" class="user_signup_error">
							Please enter a password at least two characters long
						</div>
						<div id="user_pw_long" class="user_signup_error">
							Please enter a shorter password
						</div>
						<div id="user_pw_good" class="user_signup_good">
							Password is ready
						</div>
					</div>
				</div>
				<div class="field" id="accept_terms">
					By signing up, you agree to the <%= link_to "Terms of Use", terms_path, :target => "_blank" %> & <%= link_to "Privacy Policy", privacy_path, :target => "_blank" %>
				</div>
				<div class="actions">
					Already a member? <%= link_to "Login", "javascript:void(0);", :onclick => "toggleSignupLogin();" %> <%= f.submit "Sign Up", :tabindex => 4, :id => "signup_submit" %>
				</div>
			<% end %>
		</div>
		<div id="login_form">
			<div id="facebook_login">
				<%= link_to("/auth/facebook", :id => "facebook_signup") do %>
					<%= image_tag "/assets/facebook_auth.png" %> <h3>Login with <b>Facebook</b></h3>
				<% end %>
			</div>
			<div id="login_or">
				<div id="login_or_left"></div>
				<div id="login_or_right"></div>
				<p>or</p>	
			</div>
			<%= form_for(:session, :url => sessions_path) do |f| %>
			  <div class="field">
			  	<%= f.text_field :email, :tabindex => 1, :placeholder => "Email address" %>
			  </div>
			  <div class="field">
			  	<%= f.password_field :password, :tabindex => 2, :placeholder => "Password" %>
			  </div>
			  <div id="remember_me_login">
			  	<%= check_box_tag :remember_me, 1, params[:remember_me] %> Keep me signed in
			  </div>
			  <div class="actions">
			  	<div id="forgot_password">
				  	<%= link_to "Forgot your password?", new_password_reset_path %>
				  </div>
			    <%= f.submit "Login", :id => "login_submit", :tabindex => 3 %>
			  </div>
			<% end %>
		</div>
		<div class="clear"></div>
	</div>
</div>