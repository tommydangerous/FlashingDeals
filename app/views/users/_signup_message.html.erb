<div id="login_notice">
	<% flash.each do |key, value| %>
		<div class="flash <%= key %>"><%= value %></div>
	<% end %>
</div>
<div id="signup_message">
	<div id="close_signup_message">
		<%= link_to("javascript:void(0);", :title => "Close", :onclick => "closeSignupButton();") do %>
			<%= image_tag("/assets/close.png") %>
		<% end %>
	</div>
	<div id="signup_message_header">
		<h1>Be A Part Of The Community</h1>
	</div>
	<div id="signup_message_body">
		<div id="signup_message_info">
			<%= render "users/signup_info" %>
			<div id="signup_facebook">
				<%= link_to("/auth/facebook", :id => "facebook_signup") do %>
					<%= image_tag "/assets/facebook_auth.png" %> <h3>Signup with Facebook</h3>
				<% end %>
			</div>
			<h2>...or Signup <%= link_to "Here", "javascript:void(0);", :onclick => "toggleSignupLogin();" %></h2>
		</div>
		<div id="signup_message_form">
			<%= form_for(User.new) do |f| %>
				<div class="field">
					<p>Name: <%= f.text_field :name, :autocomplete => "off", :tabindex => 1 %></p>
				</div>
				<div class="field">
					<p>Email: <%= f.text_field :email, :autocomplete => "off", :tabindex => 2 %></p>
				</div>
				<div class="field">
					<p>Password: <%= f.password_field :password, :tabindex => 3 %></p>
				</div>
				<div class="field">
					<p>Confirm: <%= f.password_field :password_confirmation, :tabindex => 4 %></p>
				</div>
				<div class="field" id="accept_terms">
					<%= f.check_box :accept_terms, :tabindex => 5 %> I agree to the <%= link_to "Terms of Service", terms_path, :target => "_blank" %> and <%= link_to "Privacy Policy", privacy_path, :target => "_blank" %>
				</div>
				<div class="actions">
					<%= f.submit "Sign Up", :tabindex => 6 %>
				</div>
			<% end %>
		</div>
		<div id="login_form">
			<div id="facebook_login">
				<%= link_to("/auth/facebook", :id => "facebook_signup") do %>
					<%= image_tag "/assets/facebook_auth.png" %> <h3>Login with Facebook</h3>
				<% end %>
			</div>
			<div id="login_or">
				<div id="login_or_left"></div>
				<div id="login_or_right"></div>
				<p>or</p>	
			</div>
			<%= form_for(:session, :url => sessions_path) do |f| %>
			  <div class="field">
			    <p>Email: <%= f.text_field :email, :tabindex => 1 %></p>
			  </div>
			  <div class="field">
			    <p>Password: <%= f.password_field :password, :tabindex => 2 %></p>
			  </div>
			  <div id="remember_me_login">
			  	<%= check_box_tag :remember_me, 1, params[:remember_me] %> Keep me signed in
			  </div>
			  <div class="actions">
			  	<div id="forgot_password">
				  	<%= link_to "Forgot your password?", new_password_reset_path %>
				  </div>
			    <%= f.submit "Login", :id => "login_submit", :tabindex => 3 %>
			  </div>
			<% end %>
		</div>
		<div class="clear"></div>
	</div>
</div>