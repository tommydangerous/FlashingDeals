<div id="my_deals">
	<div id="my_deals_side">
		<div id="my_deals_photo">
			<%= link_to(@user) do %>
				<%= image_tag(@user.photo.url, :id => "user_photo_medium") %>
			<% end %>
		</div>
		<div id="my_deals_info">
			<div id="my_deals_watching">
				<p>Deals Watching: <span id="my_account_deals_count"><%= @deals.count %></span></p>
			</div>
			<div class="my_deals_div">
				<p>
					<% if current_user.received_messages.where("read = ?", false).count > 0 %>
						<%= link_to "Messages (#{current_user.received_messages.where("read = ?", false).count})", messages_path %>
					<% else %>
						<%= link_to "Messages", messages_path %>
					<% end %>
				</p>
			</div>
			<% unless current_user.request_friends.empty? %>
				<div class="my_deals_div">
					<p><%= link_to "Friend Requests (#{current_user.request_friends.count})", friend_requests_path %></p>
				</div>
			<% end %>
			<div class="my_deals_div">
				<p>
					<%= link_to friends_user_path(@user) do %>
						Friends <span class="friends_count">(<%= (@user.friends.count + @user.inverse_friends.count) %>)
					<% end %>
				</p>
			</div>
			<div class="my_deals_div">
				<p>
					<% if current_user.inverse_deals.where("posted > ?", current_user.duration).size == 0 %>
						<%= link_to "Shared Deals", shared_deals_path %>
					<% else %>
						<%= link_to "Shared Deals (#{current_user.inverse_deals.where("posted > ?", current_user.duration).size})", shared_deals_path %>
					<% end %>
				</p>
			</div>
			<div class="my_deals_div">
				<p><%= link_to "Clear Expired Deals", clear_dead_deals_path, :remote => true %></p>
			</div>
		</div>
		</div>
	</div>
	<div id="my_deals_deals">
		<div id="my_deals_name">
			<div id="grid_search_form">
				<%= form_tag my_account_path, :method => :get do %>
					<%= text_field_tag :search, params[:search], :autocomplete => "off", :id => "grid_search" %>
					<%= submit_tag "Search", :name => nil, :id => "grid_search_button" %>
				<% end %>
			</div>
			<h1><%= @user.name %></h1>
		</div>
		<div id="grid_container">
			<%= render :partial => "users/box_deal", :collection => @deals, :as => :deal %>
		</div>
	</div>
	<div class="clear"></div>
</div>
<script>
$(document).ready(function() {
	$("div#my_deals_arrow").show();
	$("a#my_deals").removeClass("not_selected");
	$("a#my_deals").addClass("selected");
});
</script>