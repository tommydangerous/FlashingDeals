<%= render 'shared/account_settings_header' %>
<div id="content" data-role="content">
	<div class="userEditForm">
		<%= form_for @user, :remote => true, :html => { "data-ajax" => false } do |f| %>
			<div class="field">
				<p class="accountSettingsLabel">Name</p>
				<p id="nameBlank" class="signupRegex">Please enter your name</p>
				<p id="nameLong" class="signupRegex">Name is too long</p>
				<p id="nameInvalid" class="signupRegex">Name can only contain A-Z, 0-9, -, _, or 1 space)</p>
				<%= f.text_field :name, :autocomplete => "off", :tabindex => 1 %>
			</div>
			<div class="userEditButtons">
				<div class="userEditCancel">
					<%= link_to "Cancel", edit_user_path(@user), "data-role" => "none" %>
				</div>
				<div class="userEditSave">
					<%= f.submit "Save", :id => "userNameSubmit", "data-role" => "none", :tabindex => 2 %>
				</div>
			</div>
		<% end %>
	</div>
</div>