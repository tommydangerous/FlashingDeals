<div id="header" data-role="header">
	<div id="headerNav">
		<%= link_to(root_path, :id => "featuredLink", :class => "headerLink notSelected", "data-role" => "none") do %>
			<%= image_tag "blue_bolt.png", :id => "blueBolt" %>
			<p>Featured</p>
		<% end %>
		<%= link_to(me_account_path, :id => "meLink", :class => "headerLink selected") do %>
			<div id="meLinkPhoto">
				<%= image_tag current_user.photo.url %>
			</div>
			<p>Me</p>
		<% end %>
		<%= link_to(my_deals_path, :id => "mydealsLink", :class => "headerLink notSelected") do %>
			<p>My Deals</p>
		<% end %>
	</div>
</div>
<div id="contentNoPad" data-role="content">
	<div id="meAccount">
		<ul>
			<li>
				<%= link_to(notifications_path, "data-transition" => "slide") do %>
					Notifications 
					<% unless @notifications.empty? %>
						(<%= @notifications.size %>)
					<% end %>
				<% end %>
			</li>
			<li>
				<%= link_to(messages_path, "data-transition" => "slide") do %>
					Messages 
					<% unless @messages.empty? %>
						(<%= @messages.size %>)
					<% end %>
				<% end %>
			</li>
			<% unless current_user.request_friends.empty? %>
				<li><%= link_to "Friend Requests (#{current_user.request_friends.size})", friend_requests_path, "data-transition" => "slide" %></li>
			<% end %>
			<li><%= link_to "My Friends", my_friends_path, "data-transition" => "slide" %></li>
			<li><%= link_to "Settings", edit_user_path(current_user), "data-transition" => "slide" %></li>
			<li><%= link_to "Logout", logout_path, "data-ajax" => "false" %></li>
		</ul>
	</div>
</div>