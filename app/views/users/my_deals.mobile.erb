<div id="header" data-role="header">
	<div id="headerNav">
		<%= link_to(root_path, :id => "featuredLink", :class => "headerLink notSelected", "data-role" => "none") do %>
			<%= image_tag "blue_bolt.png", :id => "blueBolt" %>
			<p>Featured</p>
		<% end %>
		<%= link_to(me_account_path, :id => "meLink", :class => "headerLink notSelected") do %>
			<div id="meLinkPhoto">
				<%= image_tag current_user.photo.url %>
			</div>
			<p>Me</p>
		<% end %>
		<%= link_to(my_deals_path, :id => "mydealsLink", :class => "headerLink selected") do %>
			<p>My Deals</p>
		<% end %>
	</div>
</div>
<div id="contentNoPad" data-role="content">
	<div id="userShow">
		<div class="userShowPhoto">
			<%= image_tag @user.photo.url %>
		</div>
		<div class="userShowInfo">
			<p class="userShowName"><%= @user.name %></p>
			<p class="userShowLevel">Level <%= @user.level %> <%= @user.title %></p>
		</div>
		<div class="clear"></div>
	</div>
	<div id="featuredDeals" class="dealList">
		<%= render :partial => 'deals/list_deal', :collection => @deals, :as => :deal %>
	</div>
	<%= render 'deals/endless_pagination' %>
</div>