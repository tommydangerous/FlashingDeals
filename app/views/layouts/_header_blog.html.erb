<div id="headerBlog">
	<div class="hd">
		<div class="blogHeaderLogo">
			<%= link_to image_tag("/assets/fd_logo_blog.png"), root_url(host: request.domain) %>
	  </div>
	  <% if signed_in? %>
	  	<% if current_user.admin? %>
		  	<nav class="blogNav">
					<ul>
						<li id="editPost"><%= link_to "Edit", '#' %></li>
						<li><%= link_to "New", new_post_path %></li>
						<li><%= link_to "All", posts_path %></li>
					</ul>
				</nav>
			<% end %>
		<% end %>
		<div class="clear"></div>
	</div>
</div>
<div class="blogHeadContainer">
	<div class="blogTagline">
		<p>Friends don't let friends pay full price</p>
	</div>
	<div class="blogHeader">
		<%= link_to root_path do %>
			<div>
				Flashing
			</div>
			<div>
				Blog
			</div>
		<% end %>
	</div>
	<div class="clear"></div>
</div>